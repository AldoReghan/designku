ListTile(
            title: GestureDetector(
              onTap: () => {
                Navigator.push(context, MaterialPageRoute(builder: (context) => LoginPage()))
              },
              child: Text(
                "Login",
                style: TextStyle(color: Colors.white),
              ),
            ),
            leading: Icon(
              Icons.account_circle,
              color: Colors.white,
            ),
          ),
          ListTile(
            title: GestureDetector(
              onTap: () => {
                logoutUser()
              },
              child: Text(
                "Logout",
                style: TextStyle(color: Colors.white),
              ),
            ),
            leading: Icon(
              Icons.account_circle,
              color: Colors.white,
            ),
          ),